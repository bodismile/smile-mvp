<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="@dimen/dimen_60"
    android:background="@drawable/tab_bg"
    android:orientation="horizontal"
    android:baselineAligned="true">

    <LinearLayout
        android:id="@+id/layout_tab1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_48"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_tab1_nor"/>

        <TextView
            android:id="@+id/tv_tab1"
            android:visibility="gone"
            style="@style/style_text_gray"
            android:textSize="@dimen/font_10"
            android:gravity="center"
            android:text="@string/string_tab_1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab2"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_tab2"
            android:padding="4.0dip"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60"
            android:src="@drawable/selector_main_tab2" />

        <TextView
            android:id="@+id/tv_tab2"
            android:visibility="gone"
            style="@style/style_text_gray"
            android:textSize="@dimen/font_10"
            android:gravity="center"
            android:text="@string/string_tab_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tab3"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/dimen_48"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_tab3"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_tab3_nor" />

        <TextView
            android:id="@+id/tv_tab3"
            android:visibility="gone"
            style="@style/style_text_gray"
            android:textSize="@dimen/font_10"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>